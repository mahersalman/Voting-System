{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs", 
    "lib": ["dom", "dom.iterable", "esnext"], 
    "allowJs": true, 
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true, 
    "esModuleInterop": true, 
    "moduleResolution": "bundler",
    "resolveJsonModule": true, 
    "isolatedModules": true, 
    "forceConsistentCasingInFileNames": true, 
    "jsx": "preserve", 
    "incremental": true, 
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["./config/*"],
      "@components/*": ["./components/*"],
      "@database/*": ["./database/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}